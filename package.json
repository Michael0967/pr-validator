  "bugs": {
    "url": "https://github.com/Michael0967/pr-validator/issues"
  },
  "homepage": "https://github.com/Michael0967/pr-validator#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.9"
  }
}